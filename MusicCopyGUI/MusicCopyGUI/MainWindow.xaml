<Window x:Class="MusicCopyGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MusicCopy" Height="145" Width="626" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Pasta Origem:" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="89" Margin="0,3,0,0" />
        <TextBox Height="23" Margin="95,5,12,0" Name="sourceDirectoryTextBox" VerticalAlignment="Top" IsReadOnly="True" MouseDoubleClick="sourceDirectoryTextBox_MouseDoubleClick" />
       
        <Label Content="Pasta Destino:" Height="28" HorizontalAlignment="Left" Margin="0,30,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="95,31,12,0" Name="destinyDirectoryTextBox" VerticalAlignment="Top" IsReadOnly="True" MouseDoubleClick="destinyDirectoryTextBox_MouseDoubleClick" />

        <ProgressBar Name="progressBar" Height="12" VerticalAlignment="Bottom" />
        
        <Button Content="Copiar" Height="23" HorizontalAlignment="Right" Margin="0,60,93,0" Name="copyButton" VerticalAlignment="Top" Width="75" Click="copyButton_Click" />
        <Button Content="Parar" Height="23" HorizontalAlignment="Right" Margin="0,60,12,0" Name="stopButton" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="stopButton_Click" />
    </Grid>
</Window>
